{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Debug Server",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "minecraft_ai.api.endpoints:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
