{
    "name": "PydanticAI API Template Dev Container",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "pydanticai-api-template-dev",
    "workspaceFolder": "/app",
    "forwardPorts": [
        8000,
        3001
    ],
    "runServices": [
        "pydanticai-api-template-dev"
    ],
    "shutdownAction": "stopCompose",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit",
                        "source.organizeImports": "explicit"
                    }
                },
                "ruff.path": [
                    "/usr/local/bin/ruff"
                ],
                "mypy-type-checker.path": [
                    "/usr/local/bin/mypy"
                ],
                "terminal.integrated.fontFamily": "MesloLGM Nerd Font Mono",
                "terminal.integrated.fontSize": 14,
                "files.eol": "\n",
                "files.trimTrailingWhitespace": true,
                "files.insertFinalNewline": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-azuretools.vscode-docker",
                "charliermarsh.ruff",
                "njpwerner.autodocstring",
                "tamasfe.even-better-toml",
                "esbenp.prettier-vscode",
                "streetsidesoftware.code-spell-checker",
                "DavidAnson.vscode-markdownlint",
                "eamodio.gitlens",
                "donjayamanne.githistory",
                "mhutchie.git-graph",
                "christian-kohler.path-intellisense",
                "Gruntfuggly.todo-tree",
                "vscode-icons-team.vscode-icons",
                "wayou.vscode-todo-highlight",
                "mechatroner.rainbow-csv",
                "redhat.vscode-yaml",
                "Orta.vscode-jest",
                "ms-vscode-remote.remote-containers",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "Pydantic.pydantic-vscode",
                "meqa.promptfoo",
                "pydantic.logfire",
                "DorianMassoulier.repomix-runner"
            ]
        }
    },
    "postCreateCommand": "chmod +x scripts/dev/welcome.sh && scripts/dev/welcome.sh && python scripts/dev/install_hooks.py && echo 'Dev container created! Use Cmd+Shift+B to start both REST API and MCP servers, or type \"start\" in the terminal.'",
    "postAttachCommand": "pre-commit install"
}
